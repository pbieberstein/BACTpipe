// vim: syntax=groovy expandtab
// BACTpipe Nextflow configuration file
process {
    executor = 'local'  
    scratch = true
    stageInMode = 'copy'
    stageOutMode = 'copy'

    //Resource and module requirements
    $screen_for_contaminants {
        cpus = 1
        time = 20.m
    }
    $bbduk {
        cpus = 1
        time = 20.m
    }
    $fastqc {
        cpus = 1
        time = 40.m
    }
    $shovill {
        cpus = 1
        time = 3.h
    }
    $prokka {
         cpus = 1
         time = 2.h
    }
    $multiqc {
         cpus = 1
         time = 10.m
    }
}
